@using CrudEstabelecimentos.Models

@model EstabelecimentoModel
@{
    ViewBag.Title = "Edite Seu Estabelecimento";
}

<h2>Editando</h2>

@using (Html.BeginForm())
{
    <form>
        <div class="form-group row">
            <div class="col-sm-3">
                <label for="Razao_Social">Razão Social</label>
                @Html.TextBoxFor(estabelecimento => estabelecimento.Razao_Social, new { @class = "form-control", @required = "required", @placeholder = "Razão Social", @id = "Razao_Social" })
            </div>
            <div class="col-sm-3">
                <label for="Nome_Fantasia">Nome Fantasia</label>
                @Html.TextBoxFor(estabelecimento => estabelecimento.Nome_Fantasia, new { @class = "form-control", @placeholder = "Nome Fantasia", @id = "Nome_Fantasia" })
            </div>
            <div class="col-sm-3">
                <label for="CNPJ">CNPJ</label>
                @Html.TextBoxFor(estabelecimento => estabelecimento.CNPJ, new { @class = "Cnpj form-control", @required = "required", @placeholder = "Exemplo: xx.xxx.xxx/xxxx-xx", @id = "CNPJ" })
            </div>
            <div class="col-sm-3">
                <label for="Email">E-mail</label>
                @Html.TextBoxFor(estabelecimento => estabelecimento.Email, new { @type = "email", @class = "form-control", @placeholder = "name@example.com", @id = "Email" })
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-3">
                <label for="Endereco">Endereço</label>
                @Html.TextBoxFor(estabelecimento => estabelecimento.Endereco, new { @class = "form-control", @placeholder = "Endereço", @id = "Endereco" })
            </div>
            <div class="col-sm-3">
                <label for="Cidade">Cidade</label>
                @Html.TextBoxFor(estabelecimento => estabelecimento.Cidade, new { @class = "form-control", @placeholder = "Cidade", @id = "Cidade" })
            </div>
            <div class="col-sm-3">
                <label for="Estado">Estado</label>
                @Html.TextBoxFor(estabelecimento => estabelecimento.Estado, new { @class = "form-control", @placeholder = "Digite somente as Siglas", @id = "Estado" })
            </div>
            <div class="col-sm-3">
                <label for="Telefone">Telefone</label>
                @Html.TextBoxFor(estabelecimento => estabelecimento.Telefone, new { @class = "form-control", @placeholder = "Telefone", @id = "Telefone" })
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-3 Categoria">
                Categorias
                <div class="editor-field">
                    @Html.RadioButtonFor(estabelecimento => estabelecimento.Categoria, "Supermercado", new { @id = "Supermercado" }) Supermercado
                </div>
                <div class="editor-field">
                    @Html.RadioButtonFor(estabelecimento => estabelecimento.Categoria, "Restaurante") Restaurante
                </div>
                <div class="editor-field">
                    @Html.RadioButtonFor(estabelecimento => estabelecimento.Categoria, "Borracharia") Borracharia
                </div>
                <div class="editor-field">
                    @Html.RadioButtonFor(estabelecimento => estabelecimento.Categoria, "Posto") Posto
                </div>
                <div class="editor-field">
                    @Html.RadioButtonFor(estabelecimento => estabelecimento.Categoria, "Oficina") Oficina
                </div>
            </div>

            <div class="col-sm-3">
                Status
                <div class="editor-field">
                    @Html.RadioButtonFor(estabelecimento => estabelecimento.Status, true) Ativo
                </div>
                <div class="editor-field">
                    @Html.RadioButtonFor(estabelecimento => estabelecimento.Status, false) Inativo
                </div>
            </div>
            <div class="col-sm-3">
                <label for="Agencia">Agencia</label>
                @Html.TextBoxFor(estabelecimento => estabelecimento.Agencia, new { @class = "Agencia form-control", @placeholder = "Exemplo: xxx-x", @id = "Agencia" })
            </div>
            <div class="col-sm-3">
                <label for="Conta">Conta</label>
                @Html.TextBoxFor(estabelecimento => estabelecimento.Conta, new { @class = "Conta form-control", @placeholder = "Exemplo: xx.xxx-x", @id = "Conta" })
            </div>
        </div>


        <div class="form group-row">
            <div style="margin: 30px; margin-left: 0px" class="col-sm-offset-3">
                <a class="btn btn-primary" href="/Estabelecimentos/EstabelecimentosFirstScreen" role="button">Voltar</a>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>

        </div>
    </form>
}
@section scripts{

    <script type="text/javascript" src="js/jquery-1.2.6.pack.js"></script>
    <script type="text/javascript" src="js/jquery.maskedinput-1.1.4.pack.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".Cnpj").mask("99.999.999/9999-99");
            $(".Agencia").mask("999-9");
            $(".Conta").mask("99.999-9");
        })


        $("#Supermercado").on("change", function () {
            if ($(this).val() == "Supermercado") {
                $("#Telefone").attr("required", true)
            }
            else {
                $("#Telefone").removeAttr("required")
            }
        })
    </script>

}